    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'Asylum'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=asylum",
                    //"--package=Asylum"
                ],
                "filter": {
                    "name": "asylum",
                    "kind": "bin"
                }
            },
            "args": [
                //"-v", "--dryrun" , 
                "/six8tb/RackCopy2019-12-05/Rack/RackMediaCinema-FailedProcess"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'Asylum'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=asylum",
                    //"--package=Asylum"
                ],
                "filter": {
                    "name": "asylum",
                    "kind": "bin"
                }
            },
            "args": ["-vv","/six8tb/RackCopy2019-12-05/Rack/RackMediaCinema-FailedProcess"],
            "cwd": "${workspaceFolder}"
        }
    ]
